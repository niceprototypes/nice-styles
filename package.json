{
  "name": "nice-styles",
  "version": "4.0.0",
  "description": "A collection of CSS custom properties (variables) for consistent design tokens",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./css": "./index.css",
    "./variables.css": "./variables.css",
    "./static/*": "./static/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "static",
    "index.css",
    "variables.css"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:ts",
    "build:tokens": "node --loader ts-node/esm scripts/generate-tokens.ts",
    "build:ts": "tsc",
    "build:css": "node --loader ts-node/esm scripts/generate-tokens.ts",
    "watch": "tsc --watch & node --loader ts-node/esm scripts/generate-tokens.ts --watch",
    "test": "echo \"No tests configured\"",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "css",
    "css-variables",
    "custom-properties",
    "design-tokens",
    "design-system",
    "theming",
    "nice"
  ],
  "author": "Mohammed Ibrahim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niceprototypes/nice-styles.git"
  },
  "bugs": {
    "url": "https://github.com/niceprototypes/nice-styles/issues"
  },
  "homepage": "https://github.com/niceprototypes/nice-styles#readme",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {},
  "dependencies": {}
}